<div class="container">
  <%= form_with(model: tweet, class: "form") do |form| %>
    <% if tweet.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

        <ul>
          <% tweet.errors.each do |error| %>
            <li><%= error.full_message %></li>
